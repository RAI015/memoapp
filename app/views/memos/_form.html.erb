<br/>
<%= render 'shared/error_messages' %>

<%= form_with model: memo do |f| %>
  <div class='form-group'>
    <%= f.label :title, 'タイトル' %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>
  <div class='form-group'>
    <%= f.label :body, '本文' %>
    <%= f.text_field :body, class: 'form-control' %>
  </div>
  <div class='form-group'>
    <%= f.label :category_id, 'カテゴリー' %>
    <%= f.select :category_id, Category.all.map { |category| [category.name, category.id] }, {} , { class: 'form-control' } %>
  </div>
  <div class="form-group">
    <%= f.label :picture, '画像ファイル' %>
    <%= f.file_field :picture, accept: 'image/jpg,image/jpeg,image/gif,image/png' %>
  </div>

  <%= submit_tag '登録', class: 'btn btn-primary' %>
<% end %>

<script type="text/javascript">
  $('#memo_picture').bind('change', function() {
    var size_in_megabytes = this.files[0].size/1024/1024;
    if (size_in_megabytes > 5) {
      alert('扱えるファイルサイズは5MBまでです。');
    }
  });
</script>